#:kivy 2.3.0

<SetGame>:
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: '36dp'
        size_hint_x: 1
        
        Label:
            text: root.title()
            text_size: self.size
            pos_hint: {'left': 1}
            halign: 'left'
            valign: 'middle'
            padding_x: 18
        
        Button:
            text: "Quit"
            valign: 'middle'
            on_press: root.quit()
            size_hint: (None, 1)
            width: '108dp'
            pos_hint: {'right': 1}

    GridLayout:
        id: card_grid
        cols: 3
        spacing: 10

    BoxLayout:
        orientation:'vertical'
        id: stats_display
        size_hint_y: None

    BoxLayout:
        id: buttons_layout
        orientation: 'horizontal'
        height: '64dp'
        size_hint_y: None
