#:kivy 2.3.0
#:import globals game.globals
#:include widgets/labeled_checkbox.kv


<GameSettingsInPopup>:
    orientation: 'vertical'
    spacing: 5
    padding: 5
    game_mode: globals.GameMode.SINGLE_PLAYER

    LabeledCheckBox:
        text: "Punish Missed Sets"
        rule: globals.Rule.PUNISH_MISSED_SETS
    LabeledCheckBox:
        text: "Punish Missed Empties"
        rule: globals.Rule.PUNISH_MISSED_EMPTIES
    LabeledCheckBox:
        text: "Enable Hints"
        rule: globals.Rule.ENABLE_HINTS
    LabeledCheckBox:
        text: "Endless Mode"
        rule: globals.Rule.ENDLESS_MODE
    

<GameSettingsPopup>:
    size_hint: None, None
    size: 600, 400
    title: "Game Settings"
    title_align: "center"
    title_size: '24sp'

    BoxLayout:
        orientation: 'vertical'

        GameSettingsInPopup:
            size_hint: (1, 0.8)
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2

            Button:
                text: 'Cancel'
                on_press: root.dismiss()

            Button:
                text: 'Start Game'
                on_press: root.on_start_game_press()
